---
import { SITE_TITLE } from "../consts";
const today = new Date();
---

<footer class="footer p-10 bg-base-200 text-base-content">
	<div class="footer-content max-w-6xl mx-auto">
		<!-- Column 1: Site Title -->
		<div class="footer-column">
			<h3>{SITE_TITLE}</h3>
		</div>

		<!-- Column 2: Blog Links -->
		<div class="footer-column">
			<span class="font-bold">Blog</span>
			<nav class="mt-2">
				<ul class="space-y-1">
					<li><a href={`${import.meta.env.BASE_URL}/`} class="link link-hover text-sm">Home</a></li>
					<li><a href={`${import.meta.env.BASE_URL}/about`} class="link link-hover text-sm">About</a></li>
				</ul>
			</nav>
		</div>

		<!-- Column 3: Social Links (Text Only) -->
		<div class="footer-column">
			<span class="font-bold">Connect</span>
			<nav class="mt-2">
				<div class="flex flex-col gap-1">
					<a href="https://twitter.com/jpmrblood" target="_blank" class="link link-hover text-sm">Twitter</a>
					<a href="https://github.com/jpmrblood" target="_blank" class="link link-hover text-sm">GitHub</a>
				</div>
			</nav>
		</div>

		<!-- Column 4: AI Disclaimer & Copyright -->
		<div class="footer-column">
			<span class="font-bold">Notice</span>
			<aside class="mt-2">
				<p class="text-sm leading-relaxed">
					Content on this site is mostly generated by AI.
					<span class="text-warning">Viewer discretion is advised.</span>
					<br />
					&copy; {today.getFullYear()} Jan Peter Alexander. All rights reserved.
				</p>
			</aside>
		</div>
	</div>
</footer>

<style>
	.footer-content {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 2rem;
	}

	.footer-column {
		min-width: 0;
	}

	@media (max-width: 1024px) {
		.footer-content {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 640px) {
		.footer-content {
			grid-template-columns: 1fr;
		}
	}
</style>
